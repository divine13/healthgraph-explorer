<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/authorize"
            android:id="@+id/authButton"
            android:layout_centerHorizontal="true"
            android:onClick="authorize"/>

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authButton"
            android:layout_alignParentRight="true"
            android:rowCount="8"
            android:columnCount="1"
            android:id="@+id/gridLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Information"
                android:id="@+id/FormTitle"
                android:layout_row="0"
                android:layout_column="0"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:id="@+id/weightLabel"
                android:layout_row="1"
                android:layout_column="0"
                />

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/weightInput"
                android:layout_row="2"
                android:layout_column="0"
                android:numeric="integer|decimal"
                android:inputType="numberDecimal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat percent:"
                android:id="@+id/fatPercentLabel"
                android:layout_row="3"
                android:layout_column="0"
                />

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/fatPercentInput"
                android:layout_row="4"
                android:layout_column="0"
                android:numeric="integer|decimal"
                android:inputType="numberDecimal"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_weight_set"
                android:id="@+id/postWeightSetButton"
                android:layout_row="5"
                android:layout_column="0"
                android:onClick="postWeightSet"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_weights"
                android:id="@+id/listButton"
                android:onClick="openList"
                android:layout_row="6"
                android:layout_column="0"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deauthorize"
                android:id="@+id/deauthButton"
                android:onClick="deauthorize"
                android:layout_row="7"
                android:layout_column="0"/>
    </GridLayout>


</RelativeLayout>